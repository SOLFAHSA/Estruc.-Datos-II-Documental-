      <main>

        <%if(tarea){%>
                    <!-- Modal -->
                   <div class="container"></div>
                          
                          <div class="mb-3 ">

                            <form action="/editartareas" method="post" enctype="multipart/form-data">
                              <input id="idtarea" name="idtarea" type="hidden" value="<%=tarea.idtarea%>">
                            <div class="container">
                              <div class="mb-3 ">
                                <label for="exampleDataList" class="form-label d-flex justify-content-lg-start">Nombre
                                  de la tarea</label>
                                <input id="tarea" name="tarea"  value="<%=tarea.tarea%>" class="form-control form-control-lg" type="text"
                                  aria-label=".form-control-lg example">
                              </div>


                              <div class="mb-3">
                                </label> <label for="formFileLg" class="form-label d-flex justify-content-lg-start">Adjuntar Archivo:
                                <input  class="form-control form-control-lg" id="archivo" name="archivo" value="<%= tarea.archivo %>"  type="file">
                              </div>

                              <label for="exampleDataList"
                                class="form-label d-flex justify-content-lg-start">Estado:</label>
                              <select class="form-select form-select-lg mb-3" id="estado" name="estado"
                                aria-label=".form-select-lg example">
                                <option <%= tarea.estado=='Pendiente' ? "selected" : '' %> value="Pendiente">Pendiente</option>
                                <option <%= tarea.estado=='haciendo' ? "selected" : '' %> value="haciendo">Haciendo</option>
                                <option <%= tarea.estado=='Completado' ? "selected" : '' %> value="completado">Completado</option>
                                
                              </select>

                              <label for="exampleDataList"
                              class="form-label d-flex justify-content-lg-start">Departamento Asignado:</label>
                            <select class="form-select form-select-lg mb-3" id="DepartamentoAsignado" name="DepartamentoAsignado"
                              aria-label=".form-select-lg example">
                              <option <%= tarea.DepartamentoAsignado=="Recursos Humanos" "selected" : '' %> value="Recursos Humanos">Recursos Humanos</option>
                            </select>
                           

                              <label for="exampleDataList" class="form-label d-flex justify-content-lg-start">Prioridad:
                              </label>
                              <select class="form-select form-select-lg mb-3" id="prioridad" name="prioridad"
                                aria-label=".form-select-lg example">
                                <option <%= tarea.prioridad=='Alta' ? "selected" : '' %> value="Alta" class="alert-danger">Alta</option>
                                <option <%= tarea.prioridad=='Media' ? "selected" : '' %> value="Media" class="alert-warning">Media</option>
                                <option <%= tarea.prioridad=='Baja' ? "selected" : '' %> value="Baja" class="alert-success">Baja</option>
                              </select>

                              <div class="mb-3  ">
                                <label for="exampleDataList" class="form-label d-flex justify-content-lg-start">Fecha de
                                  vencimiento: </label>
                                <input class="form-control form-control-lg" type="date" id="fechavencimiento" name="fechavencimiento" value="<%= tarea.fechavencimeinto %>" 
                                  aria-label=".form-control-lg example">
                              </div>
                              
                             
                             
                                <button type="button" class="btn btn-secondary" >Close</button>
                                <button type="submit" class="btn btn-primary">Guardar</button>

                            </form>
                        
                          </div>
                        </div>



                        <%}%>














